  "paths": {
    "/account/balance": {
      "get": {
        "tags": [
          "account"
        ],
        "summary": "Get current balance",
        "description": "Get current balance for the account\n",
        "operationId": "account_balance_get",
        "responses": {
          "200": {
            "description": "Successful.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "amount": {
                      "type": "number",
                      "example": 1000.5
                    },
                    "currency_code": {
                      "type": "string",
                      "example": "DKK"
                    },
                    "updated_at": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2017-06-19T00:00:00+02:00"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
